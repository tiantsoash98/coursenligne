@model ASTEK.Architecture.UI.MVC.Models.Lesson.LessonAddDetailsViewModels

@{
    ViewBag.Title = UIStrings.Title_Lesson_AddDetails;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section customStyles
{
    <link href="@Url.Content("~/Content/layouts/single-post-2/css/styles.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/layouts/single-post-2/css/responsive.css")" rel="stylesheet" />
}
<div class="slider personal-slider-center" style="background-image: url(@Url.Content(Model.BaseFileUrl + Model.ImageFolder + "slider-1c2.jpg"))"></div><!-- slider -->
<section class="post-area">
    <div class="container">

        <div class="row">

            <div class="col-lg-1 col-md-0"></div>
            <div class="col-lg-10 col-md-12">

                <div class="main-post">

                    <div class="container">
                        <div class="post-top-area">

                            <!-- <h5 class="pre-title">FASHION</h5> -->

                            <h3 class="pre-title">Complétez le cours</h3>

                            <hr />

                        </div><!-- post-top-area -->

                        <div class="post-content new-lesson">
                            @using (Html.BeginForm("AddDetails", "Lesson", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger", @style = "display: block;" })
                                        @Html.ValidationMessage("Error", new { @class = "text-danger" })
                                        @Html.ValidationMessage("AttachedFiles", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="image" class="col-md-12 control-label">Attacher une illustration</label>

                                    <div class="col-md-12">
                                        <input type="file" name="image" id="image" class="form-control" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="file" class="col-md-12 control-label">Attacher une vidéo </label>

                                    <div class="col-md-12">
                                        <input type="file" name="video" id="document" class="form-control" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="file" class="col-md-12 control-label">Attacher un audio</label>

                                    <div class="col-md-12">
                                        <input type="file" name="sound" id="document" class="form-control" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="file" class="col-md-12 control-label">Attacher un document</label>

                                    <div class="col-md-12">
                                        <input type="file" name="document" id="document" class="form-control" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="file" class="col-md-12 control-label">Attacher un exercice</label>

                                    <div class="col-md-12">
                                        <input type="file" name="exercice" id="document" class="form-control" />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="file" class="col-md-12 control-label">Attacher la correction</label>

                                    <div class="col-md-12">
                                        <input type="file" name="correction" id="document" class="form-control" />

                                    </div>
                                </div>

                                @Html.HiddenFor(m => m.LessonId)

                                <div class="form-group text-right space-top">
                                    <button type="submit" class="personal-btn-simple">Valider</button>
                                </div>
                            }
                        </div>
                    </div>



                </div><!-- main-post -->
            </div><!-- col-lg-8 col-md-12 -->
        </div><!-- row -->
    </div><!-- container -->
</section><!-- post-area -->

@section customScripts {
    @Scripts.Render("~/bundles/jqueryval")
}
