@model ASTEK.Architecture.UI.MVC.Models.BaseViewModel

<div class="container-fluid no-side-padding row" id="navbar">
    <div class="col-md-2 nav-element">
        <a href="@Url.Action("Index", "Home")" class="personal-logo">
            <img src="@Url.Content(Model.BaseFileUrl + Model.ImageFolder + "logo.png")" alt="Logo Image">
        </a>

        <div class="menu-nav-icon" data-nav-menu="#main-menu">
            <i class="ion-navicon"></i>
        </div>
    </div>

    <div class="col-md-2 nav-element">
        <ul class="main-menu" id="main-menu">
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" id="studyDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@UIStrings.Studies</a>

                <div class="dropdown-menu" aria-labelledby="studyDropdown">
                    @Html.Partial("_StudyDropdown", Model.Studies.Response.Studies)
                </div>
            </li>
        </ul>
    </div>

    <div class="col-md-5 src-area nav-element">
        @using (Html.BeginForm("Search", "Lesson", FormMethod.Get))
        {
            <button class="src-btn" type="submit"><i class="ion-ios-search-strong"></i></button>
            <input class="src-input personal-search-bar" type="text" name="query" placeholder="@UIStrings.Navbar_Search" required>
        }
    </div>

    @Html.Partial("_LoginPartial")
</div>